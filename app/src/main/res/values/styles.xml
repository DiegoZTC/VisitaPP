<resources>

	<!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->

		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">@color/blue_400</item>

		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">@color/blue_900</item>

		<!-- colorAccent is used as the default value for colorControlActivated
		which is used to tint widgets -->
		<item name="colorAccent">@color/deep_purple_A100</item>



		<!-- You can also set colorControlNormal, colorControlActivated
		colorControlHighlight & colorSwitchThumbNormal. -->
	</style>
	<color name="primary">@color/blue_300</color>
	<color name="primary_dark">@color/blue_grey_700</color>
	<color name="accent">@color/light_blue_A200</color>

	<color name="secondary">@color/orange_200</color>
	<color name="secondary_dark">@color/yellow_A700</color>

</resources>
