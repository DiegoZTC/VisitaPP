<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">




    <PreferenceCategory android:title="@string/pref_titulo_usuario">
        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        <EditTextPreference
                android:key="prefCC"
                android:title="@string/pref_cc"
                android:defaultValue="@string/pref_default_cc"
                android:selectAllOnFocus="true"
                android:inputType="textCapWords"
                android:capitalize="words"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="15"
                android:summary="@string/pref_summary_cc"/>

        <EditTextPreference
                android:key="prefClave"
                android:title="@string/pref_clave"
                android:defaultValue="@string/pref_default_clave"
                android:selectAllOnFocus="true"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="4"
                android:summary="@string/pref_summary_clave"/>


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_titulo_datos">
        <Preference
                android:id="@+id/prefSincronizacion"
                android:key="prefSincronizacion"
                android:summary="@string/pref_summary_sincronizacion"
                android:title="@string/pref_sincronizacion" />


    </PreferenceCategory>


</PreferenceScreen>
