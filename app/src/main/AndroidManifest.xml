<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fisei.visitapp.app" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name = "android.permission.set_debug_app"/>-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.fisei.visitapp.app.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fisei.visitapp.app.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.fisei.visitapp.app.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.fisei.visitapp.app.PracticeActivity"
            android:label="@string/title_activity_practica" >
        </activity>
        <activity
            android:name="com.fisei.visitapp.app.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".VisitaSistemasActivity"
            android:label="@string/title_activity_visita" >
        </activity>
        <activity
            android:name="com.fisei.visitapp.app.SeleccionVisitaActivity"
            android:label="@string/title_activity_seleccion_visita" >
        </activity>
    </application>

</manifest>
